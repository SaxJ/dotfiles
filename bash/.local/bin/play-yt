#!/bin/bash
videolink="https://youtu.be/"
playlink="https://youtube.com/playlist?list="

choice=$1
if [ -z "$choice" ]; then exit; fi

id=$(echo -e "$choice" | cut -d'	' -f1) # get id of choice
case $id in
  # 11 digit id = video
  ???????????) mpv "$videolink$id" --no-video ;;

  # 34 digit id = playlist
  ??????????????????????????????????) mpv "$playlink$id" --no-video ;;
*) exit ;;
esac
