#!/bin/bash
videolink="https://youtu.be/"

choice=$1
if [ -z "$choice" ]; then exit; fi

id=$(echo -e "$choice" | cut -d'	' -f1) # get id of choice
case "$id" in
  ???????????)
  yt-dlp -t aac -o "$HOME/Music/%(title)s.%(ext)s" --restrict-filenames --embed-thumbnail --embed-metadata  "$videolink$id"
  ;;

  ??????????????????????????????????)
  echo "Can't download a playlist"
  ;;

  *)
  exit
  ;;
esac
